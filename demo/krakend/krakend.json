{
  "version": 3,
  "timeout": "3s",
  "cache_ttl": "300s",
  "name": "oidc-james",
  "port": 8090,
  "debug_endpoint": true,
  "extra_config": {
    "auth/revoker": {
      "N": 10000000,
      "P": 0.0000001,
      "hash_name": "optimal",
      "TTL": 3600,
      "port": 1234,
      "token_keys": ["sid"]
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "HEAD", "POST", "OPTIONS"],
      "allow_headers": ["Authorization", "Accept", "Content-Type"],
      "allow_credentials": true,
      "debug": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/.well-known/webfinger",
      "output_encoding": "json",
      "input_query_strings": ["resource", "rel"],
      "input_headers": ["*"],
      "method": "GET",
      "headers_to_pass": ["X-User", "Accept", "Content-Type"],
      "backend": [
        {
          "url_pattern": "/.well-known/webfinger",
          "method": "GET",
          "host": ["http://tmail-backend"]
        }
      ]
    },
    {
      "endpoint": "/.well-known/jmap",
      "output_encoding": "json",
      "input_query_strings": ["resource", "rel"],
      "input_headers": ["*"],
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/.well-known/jmap",
          "method": "GET",
          "host": ["http://tmail-backend"]
        }
      ],
      "headers_to_pass": ["X-User", "Accept", "Content-Type"],
      "extra_config": {
        "auth/validator": {
          "alg": "RS512",
          "jwk_url": "http://sso.example.com/oauth2/jwks",
          "propagate_claims": [["sub", "X-User"]],
          "cache": true,
          "disable_jwk_security": true,
          "operation_debug": true
